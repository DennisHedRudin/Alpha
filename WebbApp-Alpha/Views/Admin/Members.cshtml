@using Business.Models.Members
@model IEnumerable<Member>

@{	
	Layout = "_PortalLayout";
	ViewData["Title"] = "Team Members";
}

<partial name="Partials/Sections/_AddMemberForm" />
@* <partial name="Partials/Sections/_EditMemberForm" /> *@

<section id="Team-Members">

	<header class="main-headline">
		<h2>Team Members</h2>
		<button type="button" class="btn btn-add" data-modal="true" data-target="#addMemberModal">Add Member</button>
	</header>

	<div class="surface members-list">
		@if (Model != null) {
			@foreach (var member in Model)
			{
				<div class="card member">
					
						<h4 class="name">@member.FirstName @member.LastName</h4>
						<div class="jobtitle">@member.JobTitle</div>
						<div class="email">@member.Email</div>
						<div class="phone">@member.Phone</div>
						<div class="role"></div>
						<button></button>
					
				</div>
			}
		}
		
	</div>
</section>