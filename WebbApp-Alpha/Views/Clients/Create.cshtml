@model ClientCreateFormModel

@{
	ViewData["Title"] = "Add Client";
}

<div id="add-client" class="center-content">
	<form asp-action="Create" class="form-container" method="post" enctype="multipart/form-data" novalidate>
	
		<header class="main-headline">
			<h3>@ViewData["Title"]</h3>
			<button class="btn"><i class="bi bi-plus-lg"></i></button>
		</header>
	
		<div class="form-group">
			<label asp-for="ClientName" class="form-label"></label>
			<div class="field-group">
				<input asp-for="ClientName" class="form-control">
				<span asp-validation-for="ClientName"></span>
			</div>
		</div>
		<div class="form-group">
			<label asp-for="ContactPerson" class="form-label"></label>
			<div class="field-group">
				<input asp-for="ContactPerson" class="form-control">
				<span asp-validation-for="ContactPerson"></span>
			</div>
		</div>
		<div class="form-group">
			<label asp-for="Email" class="form-label"></label>
			<div class="field-group">
				<input asp-for="Email" class="form-control">
				<span asp-validation-for="Email"></span>
			</div>
		</div>
		<div class="form-group">
			<label asp-for="Phone" class="form-label"></label>
			<div class="field-group">
				<input asp-for="Phone" class="form-control">
				<span asp-validation-for="Phone"></span>
			</div>
		</div>

		<footer>
			<button type="submit" class="btn btn-blue">Create</button>
		</footer>
	
	</form>


</div>

@await Html.PartialAsync("_ValidationScripts")