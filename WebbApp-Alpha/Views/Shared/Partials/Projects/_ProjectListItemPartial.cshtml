
@model ProjectViewModel

<div  class="project-card " data-project-id="@Model.Id">
    <div class="card-header">
        <div class="project-image">
            <img src="@(Model.ProjectImage ?? " /images/project/project-template.svg")" />
        </div>
        <h6 class="project-name">@Model.ProjectName</h6>
        <span class="client-name">@Model.Client?.ClientName</span>
        <div id="project-actions-container">
            <button type="button" data-type="dropdown" data-target="#projectdropdown-@Model.Id" class="btn-action">
                <i class="fa-solid fa-ellipsis"></i>
            </button>
            <div id="projectdropdown-@Model.Id" class="dropdown">
                <div class="dropdown-body">
                    <nav class="dropdown-actions">
                        <a class="dropdown-action edit-project-btn" href="#" data-target="#editProjectModal-@Model.Id" data-modal="true">
                            <i class="fa-duotone fa-solid fa-pen-to-square"></i>
                            <span>Edit</span>
                        </a>
                    </nav>
                    <div class="dropdown-divider"></div>
                    <nav class="dropdown-actions">
                        <form method="post" asp-controller="Projects" asp-action="DeleteProject" class="delete-project-form">
                            <input type="hidden" name="id" value="@Model.Id" />
                            <button type="submit" class="dropdown-action remove" onclick="return confirm('Are you sure you want to delete this project?');">
                                <i class="fa-duotone fa-solid fa-trash"></i>
                                <span>Delete Project</span>
                            </button>
                        </form>
                    </nav>

                </div>

            </div>
        </div>
    </div>
    <div class="card-body">
        <p>@Model.Description</p>
    </div>
    <div class="card-footer">
        <div class="badge badge-normal time">
            <i class="fa-duotone fa-solid fa-clock"></i>
            <span></span>
        </div>
        <div class="members">
            <div class="user-image">
                <img />
            </div>

        </div>

    </div>

    
        
            @await Html.PartialAsync("Partials/Projects/_editProjectForm", Model.EditForm)
        
    

</div>