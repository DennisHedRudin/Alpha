@model EditProjectForm


    
        <div class="modal-header">
            <h3>Edit Project</h3>
            <button class="btn-closed" data-close="true"></button>
        </div>

        <form method="post" asp-controller="Projects" asp-action="UpdateProject" enctype="multipart/form-data" novalidate class="ajax-form">

            
            <input asp-for="Id" type="hidden" />

            
            <div class="image-previewer square">
             <img src="@Model.ExistingImageUrl" class="image-preview" />
                <input asp-for="ProjectImage" accept="image/*" class="hide" />
            </div>

           
            <div class="form-group">
                <label asp-for="ProjectName"></label>
                <input asp-for="ProjectName" />
                <span asp-validation-for="ProjectName"></span>
            </div>

            
            <div class="form-group">
                <label asp-for="ClientId"></label>
                <div class="field-group">
                    <select asp-for="ClientId" asp-items="Model.Clients">
                        <option value="">Select a client</option>
                    </select>
                    <span asp-validation-for="ClientId"></span>
                </div>
            </div>

          
            <div class="form-group">
                <label asp-for="Description"></label>
                <div class="field-group">
                    <textarea asp-for="Description"></textarea>
                    <span asp-validation-for="Description"></span>
                </div>
            </div>

            
            <div class="form-group">
                <label asp-for="StartDate"></label>
                <div class="field-group">
                    <input asp-for="StartDate" type="date" />
                    <span asp-validation-for="StartDate"></span>
                </div>
            </div>

            
            <div class="form-group">
                <label asp-for="EndDate"></label>
                <div class="field-group">
                    <input asp-for="EndDate" type="date" />
                    <span asp-validation-for="EndDate"></span>
                </div>
            </div>

           
            <div class="form-group">
                <label asp-for="Budget"></label>
                <div class="field-group">
                    <input asp-for="Budget" />
                    <span asp-validation-for="Budget"></span>
                </div>
            </div>

            
            <div class="form-group">
                <label asp-for="MemberId"></label>
                <div class="field-group">
                    <select asp-for="MemberId" asp-items="Model.Members">
                        <option value="">Select a member</option>
                    </select>
                    <span asp-validation-for="MemberId"></span>
                </div>
            </div>


             @if (Model.Statuses?.Any() == true)
            {
                <div class="form-group">
                    <label asp-for="StatusId"></label>
                    <div class="field-group">
                        <select asp-for="StatusId" asp-items="Model.Statuses">
                            <option value="">Select a status</option>
                        </select>
                        <span asp-validation-for="StatusId"></span>
                    </div>
                </div>
            }

            <button type="submit" class="btn btn-blue btn-submit">
                Save 
            </button>
        </form>
   



@await Html.PartialAsync("_ValidationScriptsPartial")