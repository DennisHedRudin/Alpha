@model WebbApp_Alpha.ViewModels.Projects.AddProjectForm

<div id="addProjectModal" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <h3>Add Project</h3>
            <button class="btn-closed" data-close="true"></button>
        </div>

        <form method="post" asp-action="AddProject" asp-controller="Projects" enctype="multipart/form-data" novalidate class="ajax-form">
            <!-- Project Image -->
            <div class="image-previewer square">
                <img src="" class="image-preview" />
                <input asp-for="ProjectImage" accept="image/*" class="hide" />
            </div>

            <!-- Project Name -->
            <div class="form-group">
                <label asp-for="ProjectName"></label>
                <div class="field-group">
                    <input asp-for="ProjectName" />
                    <span asp-validation-for="ProjectName"></span>
                </div>
            </div>

            <!-- Client Selection -->
            <div class="form-group">
                <label asp-for="ClientId"></label>
                <div class="field-group">
                    <select asp-for="ClientId" asp-items="@(new SelectList(ViewBag.Clients, "Id", "ClientName"))">
                        <option value="">Select a client</option>
                    </select>
                    <span asp-validation-for="ClientId"></span>
                </div>
            </div>

            <!-- Description -->
            <div class="form-group">
                <label asp-for="Description"></label>
                <div class="field-group">
                    <textarea asp-for="Description"></textarea>
                    <span asp-validation-for="Description"></span>
                </div>
            </div>

            <!-- Dates -->
            <div class="form-group">
                <label asp-for="StartDate"></label>
                <div class="field-group">
                    <input asp-for="StartDate" type="date" />
                    <span asp-validation-for="StartDate"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="EndDate"></label>
                <div class="field-group">
                    <input asp-for="EndDate" type="date" />
                    <span asp-validation-for="EndDate"></span>
                </div>
            </div>

            <!-- Budget -->
            <div class="form-group">
                <label asp-for="Budget"></label>
                <div class="field-group">
                    <input asp-for="Budget" />
                    <span asp-validation-for="Budget"></span>
                </div>
            </div>

            <!-- Members Selection -->
            <div class="form-group">
                <label asp-for="MemberId"></label>
                <div class="field-group">
                    <select asp-for="MemberId" asp-items="@(new SelectList(ViewBag.Members, "Id", "FullName"))">
                        <option value="">Select a member</option>
                    </select>
                    <span asp-validation-for="MemberId"></span>
                </div>
            </div>

            <button type="submit" class="btn btn-blue btn-submit">Create Project</button>
        </form>
    </div>
</div>

@await Html.PartialAsync("_ValidationScripts")